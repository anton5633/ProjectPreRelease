<Page x:Class="WpfApp5.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5"
      mc:Ignorable="d" 
      d:DesignHeight="820" 
      d:DesignWidth="1920"
      Loaded="AdminPage_Loaded"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="770"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Name="Panel" 
              Background="Black">
            <StackPanel HorizontalAlignment="Right" 
                        Orientation="Horizontal">
                <Button x:Name="LeaveButton" 
                        Height="50px" 
                        Width="300px" 
                        Click="LeaveButton_Click" 
                        Content="Вернуться к главной странице"
                        Background="Transparent" 
                        Foreground="White" 
                        FontFamily="Yu Gothic UI Semibold"
                        FontSize="18"
                        BorderBrush="White" 
                        BorderThickness="1,0,0,0" 
                        Margin="0.1,0,0,0">
                </Button>
                <Button x:Name="ExitButton" 
                        Height="50px" 
                        Width="300px" 
                        Click="ExitButton_Click" 
                        Content="Выход из учётной записи"
                        Background="Transparent" 
                        Foreground="White" 
                        FontFamily="Yu Gothic UI Semibold"
                        FontSize="18"
                        BorderBrush="White" 
                        BorderThickness="1,0,0,0" 
                        Margin="0.1,0,0,0">
                </Button>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              Name="grid">
            <Border x:Name="myBorder"
                    Width="1392" 
                    Height="636"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" 
                    Margin="50,0,0,0"
                    BorderThickness="6px"
                    CornerRadius="30"
                    Background="#8C4E4E4E">
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF22009E" 
                                      Offset="0.102"/>
                        <GradientStop Color="Black" 
                                      Offset="1"/>
                        <GradientStop Color="#FF22009E" 
                                      Offset="0.895"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Grid>
                    <TextBlock Text="Заглушка"
                               x:Name="Hello"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Margin="50,30,30,30"
                               Foreground="Black"
                               FontSize="34" 
                               FontFamily="Yu Gothic UI Semibold">
                    </TextBlock>
                    <Button Width="430"
                            Height="50"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Margin="30"
                            Content="Зарегистрировать новый магазин" 
                            FontSize="22" 
                            FontFamily="Yu Gothic UI Semibold" 
                            Click="ButtonMagaz">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" 
                                Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Width="430"
                            Height="50"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            Margin="30"
                            Content="Зарегистрировать нового пользователя" 
                            FontSize="22" 
                            FontFamily="Yu Gothic UI Semibold" 
                            Click="Button_Click"
                            >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" 
                                Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Width="430"
                            Height="50"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Margin="30"
                            Content="Зарегистрировать нового редактора" 
                            FontSize="22" 
                            FontFamily="Yu Gothic UI Semibold" 
                            Click="ButtonEditor">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" 
                                Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
            <Border x:Name="myBorder1"
                    Width="446" 
                    Height="636"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" 
                    Margin="1464,0,0,0"
                    BorderThickness="6px"
                    CornerRadius="30"
                    Background="#8C4E4E4E">
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF22009E" 
                                      Offset="0.102"/>
                        <GradientStop Color="Black" 
                                      Offset="1"/>
                        <GradientStop Color="#FF22009E" 
                                      Offset="0.895"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Grid>
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0">
                        <Image x:Name="profileImage" MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300"
                   Source="Img/changetheme.png"/>
                        <Button Content="Change Photo" Click="ChangePhoto_Click" Margin="0,20,0,0" Width="200" Height="20">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
                            Value="10"/>
                                </Style>
                            </Button.Resources>
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                        </Button>

                        <TextBlock x:Name="firstNameTextBlock" FontSize="20" Margin="10,10,0,0" Text="zagl"/>
                        <TextBox x:Name="firstNameTextBox" FontSize="20" Margin="0,10,0,0">
                            <TextBox.Effect>
                                <DropShadowEffect/>
                            </TextBox.Effect>
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" 
                            Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock x:Name="secondNameTextBlock" FontSize="20" Margin="10,10,0,0" Text="zagl"/>
                        <TextBox x:Name="secondNameTextBox" FontSize="20" Margin="0,10,0,0">
                            <TextBox.Effect>
                                <DropShadowEffect/>
                            </TextBox.Effect>
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" 
                            Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Button Click="ChangeName" Content="Сохранение изменений" Margin="0,20,0,0" Height="30">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
                            Value="10"/>
                                </Style>
                            </Button.Resources>
                            <Button.Effect>
                                <DropShadowEffect/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>